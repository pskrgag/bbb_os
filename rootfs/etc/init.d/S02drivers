#!/bin/sh
#
# Start logging
#

start() {
	printf "Loading drivers: "
	modprobe g_ether
	mkdir -p /dev/pts
	mount devpts /dev/pts -t devpts
	echo "OK"
}

stop() {
	printf "Unloading drivers: "
	modprobe -r g_ether
	echo "OK"
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	stop
	start
	;;
  *)
	echo "Usage: $0 {start|stop|restart|reload}"
	exit 1
esac

exit $?
